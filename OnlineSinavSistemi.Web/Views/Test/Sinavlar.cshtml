@model IEnumerable<OnlineSinavSistemi.Core.Models.Sinav>

@{
    ViewData["Title"] = "Sınava Gir";
}

<div class="container">
    <h1 class="my-4">Sınav Katılımı</h1>
    
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Mevcut Sınavlar</h5>
        </div>
        <div class="card-body">
            <p class="mb-4">Aşağıdaki sınavlardan birine giriş yaparak sınav olabilirsiniz.</p>
            
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var sinav in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="mb-0">@sinav.Baslik</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <strong><i class="bi bi-calendar3"></i> Oluşturulma Tarihi:</strong> 
                                        @sinav.OlusturulmaTarihi.ToString("dd.MM.yyyy")
                                    </div>
                                    <div class="mb-2">
                                        <strong><i class="bi bi-question-circle"></i> Soru Sayısı:</strong> 
                                        @(sinav.Sorular?.Count ?? 0)
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a asp-action="SinavOl" asp-route-id="@sinav.SinavId" class="btn btn-success w-100">
                                        <i class="bi bi-pencil-square"></i> Sınava Katıl
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Şu anda mevcut sınav bulunmamaktadır.
                </div>
            }
        </div>
    </div>
    
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i> <strong>Not:</strong> Bir sınava katıldığınızda cevaplarınız otomatik olarak kaydedilir ve sonuçlarınız hemen görüntülenir.
    </div>
</div> 