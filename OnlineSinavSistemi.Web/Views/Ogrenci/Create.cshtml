@model OnlineSinavSistemi.Core.Models.Ogrenci

@{
    ViewData["Title"] = "Yeni Öğrenci Ekle";
}

<div class="container">
    <h1 class="my-4">Yeni Öğrenci Ekle</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Öğrenci Bilgileri</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Isim" class="form-label">İsim</label>
                            <input asp-for="Isim" class="form-control" placeholder="Öğrenci adını giriniz" />
                            <span asp-validation-for="Isim" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Sinif" class="form-label">Sınıf</label>
                    <input asp-for="Sinif" class="form-control" placeholder="Örn: 10-A" />
                    <span asp-validation-for="Sinif" class="text-danger"></span>
                </div>

                <div class="d-flex mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 